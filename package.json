{
  "name": "@thisdotsoftware/react",
  "version": "0.0.1",
  "description": "this.react is a React component library created by this.software to power our customer and colleague experiences, including Cheapskate.",
  "main": "./cjs/thisdotreact.min.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "author": "Daniel Farrell <highdanbo@gmail.com>",
  "license": "UNLICENSED",
  "files": [
    "cjs",
    "esm"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:thisdotsoftware/thisdotreact.git"
  },
  "sideEffects": false,
  "scripts": {
    "========== DEVELOPING ==========": "",
    "start": "start-storybook -p 6006",
    "========== PRODUCTION ==========": "",
    "build:esm": "rimraf ./esm && tsc",
    "build:cjs": "yarn webpack --mode production",
    "build:storybook": "build-storybook -o ./public --docs",
    "deploy": "yarn build:storybook && firebase deploy --only hosting",
    "========= CODE QUALITY =========": "",
    "test": "jest --watch",
    "test:ci": "jest",
    "lint": "eslint ./src/ --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "17.x",
    "react-router": "5.x",
    "react-router-dom": "5.x",
    "styled-components": "5.x"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-router": "^5.1.12",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": ">=4",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-localstorage-mock": "^2.4.7",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "regenerator-runtime": "^0.13.7",
    "styled-components": "^5.2.1",
    "typescript": "^4.2.3",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commitmsg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
